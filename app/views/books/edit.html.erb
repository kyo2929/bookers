<div class="flash">
  <%= flash[:notice] %>
</div>

<header>
  <h2>Editing Book</h2>
</header>
<div class="validates">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
