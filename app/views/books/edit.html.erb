<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
  
<div class="text">
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
</div>

<div class="edit">
  <%= f.submit 'Update Book' %>
</div>

<div class="link">
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", "/books" %>
</div>

<% end %>