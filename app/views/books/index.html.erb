<header>
  <h2>Books</h2>
  <% @books.each do |book| %>
</header>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td> 
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></td>
    </tr>
  </div>
  
<% end %>

<div class="text">
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
  
    <h4>Body</h4>
    <%= f.text_area :body %>
  
    <%= f.submit '投稿' %>
  
  <%end%>
</div>