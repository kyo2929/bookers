<h2>Books</h2>
<% @books.each do |book| %>

  <h4>Title</h4>
  <%= book.title %>
  
  <h4>Body</h4>
  <%= book.body %>
  <span><%= link_to "show", book_path(book.id) %></span>
  <%= link_to "Edit", edit_book_path(book.id) %> 
  
<% end %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
  
<%end%>